
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  address       String @unique
  tasks         Task[]
} 

model Worker {
  id              Int @id @default(autoincrement())
  address         String @unique
  submissions     Submission[]
  balance_id      Int
  pending_amount  Int
  locked_amount   Int

}

model Task {
    id             Int @id @default(autoincrement())
    title          String @default("Seclet the mos clickable thumbnail")
    options        Option[]
    user_id        Int
    signature      String
    amount         String
    user           User @relation(fields: [user_id], references: [id])
    submissions    Submission[]
  }

model Option {
    id            Int @id @default(autoincrement())
    image_url     String
    option_id     Int
    task_id       Int
    task          Task @relation(fields: [task_id], references: [id])
    submissions Submission[]
  }


model Submission {
  id        Int         @id @default(autoincrement())
  worker_id Int 
  worker    Worker       @relation(fields: [worker_id], references: [id])
  option_id Int
  option    Option      @relation(fields: [option_id], references: [id])
  task_id   Int
  task      Task        @relation(fields: [task_id],references: [id])
  amount    String
}

